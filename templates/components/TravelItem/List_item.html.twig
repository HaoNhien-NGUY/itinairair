<div id="item-{{ item.id }}">
    <div class="bg-indigo-50z rounded-3xl {{ newItem is same as(item) ? 'new-item' }}">
        <div class="flex space-x-3 zp-3">
{# TODO: revove place holder #}
{#            <img class="h-28 w-28 rounded-2xl shrink-0 object-cover" src="https://placehold.co/300?text=Hello" alt="{{ item.name }}-photo" />#}
            <img class="h-28 w-28 rounded-2xl shrink-0 object-cover" src="{{ item.place.photoUri ?? ('https://placehold.co/300?text=' ~ item.name) }}" alt="{{ item.name }}-photo" />
            <div class="">
{#                <p class="text-sm text-purple-900 font-medium mb-1.5">{{ place.type }}</p>#}
                <div class="font-medium text-base/6 text- line-clamp-2">POSITION {{ item.position }}{{ item.place.name }}</div>
                <a href="{{ item.place.googleMapsURI }}" target="_blank" rel="noopener noreferrer" class="text-sm/snug hover:text-blue-400 text-gray-600 line-clamp-1">{{ item.place.address }}</a>

                {% if item.notes is not empty %}
                    <div class="mt-3 border-1 border-gray-300 rounded-2xl text-sm border-dashed p-3">
                        <span class="text-gray-600">
                            {{ item.notes }}
                        </span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
