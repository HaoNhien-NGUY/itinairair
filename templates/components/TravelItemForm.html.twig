<div {{ attributes.defaults(stimulus_controller('google-place-widget')) }}>
    <gmp-place-autocomplete
        id="place-autocomplete"
        class="bg-gray-100 rounded-2xl focus:outline-none focus:ring-0 focus:border-none"
        placeholder="Enter a location"
    {{ stimulus_target('google-place-widget', 'placeInput') }}>
    </gmp-place-autocomplete>

{#    <div class="flex justify-center">#}
