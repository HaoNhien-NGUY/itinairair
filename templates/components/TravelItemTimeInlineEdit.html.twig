<div{{attributes}}>
	{% if isEditing %}
        <div class="rounded-full flex text-indigo-600 bg-indigo-50">
            <label>
                <input type="time" data-model="startTime" class="pl-1 text-sm rounded-full mr-1"/>
            </label>
            <label>
                <input type="time" data-model="endTime" class="pl-1 text-sm rounded-full rounded-l-none border-l-1 border-indigo-200" />
            </label>
            <button class="ml-2 bg-indigo-100 border border-indigo-200 self-stretch cursor-pointer px-2 hover:bg-indigo-200 rounded-full" data-action="live#action" data-live-action-param="save">
                <twig:ux:icon name="iconoir:check" class="size-4 text-indigo-600"/>
            </button>
        </div>
	{% else %}
		<button data-action="live#action" data-live-action-param="activateEditing" class="cursor-pointer flex items-center py-0.5 px-1.5 rounded-full text-indigo-500 hover:bg-indigo-100 bg-indigo-50">
			<div class="min-w-3 mr-1">
				<twig:ux:icon name="iconoir:clock" class="size-3.5 text-indigo-500"/>
			</div>
            <span class="text-sm font-medium">
                {% if item.startTime %}
                    {{ item.startTime|date('H:i') }}{% if item.endTime %}<span class="mx-0.5">-</span>{{ item.endTime|date('H:i') }}{% endif %}
                {% else %}
                    <span class="text-sm text-indigo-400 pl-1 pr-2">-</span>
                {% endif %}
            </span>
		</button>
	{% endif %}
</div>
