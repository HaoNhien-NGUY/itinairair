{% extends 'travel_item/accommodation/base_show.html.twig' %}

{% block open_details %}
    <a href="{{ path('app_travelitem_accommodation_show', {'trip': trip.id, 'item': item.id, 'day': day.id ?? null}) }}"
       class="py-1 px-4 text-gray-900 bg-indigo-100 flex focus:outline-none hover:bg-indigo-200 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg">
        <twig:ux:icon name="uiw:up" class="size-4 text-indigo-400" />
    </a>
{% endblock %}

{% block details %}
    <div>
        <div>
            <div class="text-sm text-gray-500">
                address: {{ item.address }}
            </div>
            <div class="mt-1">
                {{ item.startDay.date|date('d/m/Y') }} - {{ item.endDay.date|date('d/m/Y') }}
            </div>
        </div>
        {% if item.notes is not empty %}
            <div class="flex mt-4 items-center border-1 border-gray-300 rounded-xl border-dashed px-4 py-2">
                <twig:ux:icon name="wpf:note" class="size-4 text-gray-500 mr-4" />
                <span class="text-gray-600">
                    {{ item.notes }}
                </span>
            </div>
        {% endif %}
        <div class="flex justify-end mt-8">
            <a href="{{ path('app_travelitem_accommodation_edit', {'trip': trip.id, 'item': item.id, 'day': day.id ?? null}) }}"
               class="py-1 px-3 text-gray-500 text-sm bg-gray-200 flex items-center focus:outline-none hover:bg-gray-300 focus:ring-4 focus:ring-gray-100 font-medium rounded-2xl"
            >
                <twig:ux:icon name="fluent:edit-12-filled" class="size-4 mr-2" />
                Modifier
            </a>
        </div>
    </div>
{% endblock %}
