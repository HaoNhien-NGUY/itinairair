{% extends 'travel_item/accommodation/base_show.html.twig' %}

{% block open_details %}
    <a href="{{ path('app_travelitem_accommodation_show', {'trip': trip.id, 'item': item.id, 'day': day.id ?? null}) }}"
       class="py-1 px-4 text-gray-900 bg-indigo-100 flex focus:outline-none hover:bg-indigo-200 focus:ring-4 transition-colors focus:ring-gray-100 font-medium rounded-lg">
        <twig:ux:icon name="uiw:up" class="size-4 text-indigo-400" />
    </a>
{% endblock %}

{% block details %}
    <div>
        <div class="text-sm">
            <div class="text-gray-500">
                {{ item.place.address }}
            </div>
            <div class="mt-1 text-blue-500 font-medium">
                {{ item.startDay.date|date_short }} - {{ item.endDay.date|date_short }}
            </div>
        </div>
        <div class="flex justify-between items-end mt-3">
            <div class="flex items-center">
                {% if item.notes is not empty %}
                    <twig:ux:icon name="wpf:note" class="size-4 text-gray-400 mr-2" />
                    <span class="text-gray-500 text-sm py-1">
                        {{ item.notes }}
                    </span>
                {% endif %}
            </div>
            <div class="flex items-center">
                <form action="{{ path('app_travelitem_delete', {'item': item.id}) }}" method="post" data-turbo-frame="_top" onsubmit="return confirm('Supprimer ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                    <button type="submit" class="cursor-pointer text-gray-500 text-sm bg-gray-200 hover:bg-gray-300 flex items-center rounded-xl px-2 py-1 transition-colors">
{#                        Supprimer#}
                        <twig:ux:icon name="flowbite:trash-bin-solid" class="size-4 text-gray-500" />
                    </button>
                </form>

                <a href="{{ item.place.googleMapsURI }}"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="ml-2 py-1 px-3 text-indigo-400 text-sm bg-indigo-100 flex items-center focus:outline-none hover:bg-indigo-200 focus:ring-4 focus:ring-gray-100 transition-colors rounded-xl">
                    Ouvrir dans Maps
                    <twig:ux:icon name="bxs:map" class="size-4 ml-1" />
                </a>
            </div>
        </div>
    </div>
{% endblock %}
