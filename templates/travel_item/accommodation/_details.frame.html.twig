{% extends 'travel_item/accommodation/base_show.html.twig' %}

{% block open_details %}
    <a href="{{ path('app_travelitem_accommodation_show', {'trip': trip.id, 'item': item.id, 'day': day.id ?? null}) }}"
       class="py-1 px-4 text-gray-900 bg-indigo-100 flex focus:outline-none hover:bg-indigo-200 focus:ring-4 transition-colors focus:ring-gray-100 font-medium rounded-lg">
        <twig:ux:icon name="uiw:up" class="size-4 text-indigo-400" />
    </a>
{% endblock %}

{% block details %}
    <div>
        <div class="text-sm">
            <div class="text-gray-500 flex items-center">
{#                <div class="size-5 mr-2"></div>#}
{#                <twig:ux:icon name="bxs:map" class="size-4.5 text-gray-700 mr-2" />#}
                {{ item.place.address }}
            </div>
            <div class="mt-1 text-indigo-500 flex items-center">
{#                <div class="size-5 mr-2"></div>#}
                {{ item.startDay.date|date_short }} - {{ item.endDay.date|date_short }}
            </div>
        </div>
        <div class="mt-4">
            <div class="flex w-full">
                <div class="min-w-5 mr-1">
                    <twig:ux:icon name="wpf:note" class="size-4 mt-0.5 text-yellow-500"/>
                </div>
                <div class="w-full">
                    <twig:TravelItemNoteInlineEdit item="{{ item }}" class="focus-within:bg-indigo-100 hover:bg-indigo-100"/>
                </div>
            </div>
        </div>
        <div class="flex justify-end space-x-2 mt-3">
            <div class="flex">
                <form action="{{ path('app_travelitem_delete', {'trip': trip.id}) }}" method="post" data-turbo-frame="_top" onsubmit="return confirm('Supprimer ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete-item' ~ trip.id) }}">
                    <input type="hidden" name="item" value="{{ item.id }}">
                    <button type="submit" class="cursor-pointer text-gray-500 text-sm  hover:bg-gray-200 flex items-center rounded-xl px-2 py-1 transition-colors">
                        <twig:ux:icon name="flowbite:trash-bin-solid" class="size-4 text-gray-400" />
                    </button>
                </form>


                <a href="{{ path('app_travelitem_edit', {'item': item.id, 'trip': trip.id}) }}" data-turbo-frame="modal" class="flex items-center text-gray-400 hover:bg-gray-200 text-sm py-1 px-2.5 rounded-xl">
                    <twig:ux:icon name="fluent:edit-16-filled" class="size-4" />
                </a>
            </div>



            <twig:Button:OpenMaps item="{{ item }}" />
        </div>
    </div>
{% endblock %}
