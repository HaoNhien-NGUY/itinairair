<twig:Modal>
    {% block title %}<span class="modal-header">{{ (item.place ?? null) ? item.place.type : 'common.place'|trans }}</span>{% endblock %}

    {% set googlePlaceOptions = {primaryTypes: ['food', 'tourist_attraction', 'point_of_interest', 'store', 'cafe']} %}
    {% if destination|default %}
        {% set googlePlaceOptions = googlePlaceOptions|merge({'location': destination.place.location}) %}
    {% endif %}

    {% set place = item.place ?? null %}

    <div {{ stimulus_controller('google-place-widget', googlePlaceOptions) }}>

        <gmp-place-autocomplete
            id="place-autocomplete"
            class="{{ place ? 'hidden' }} mb-6 bg-white rounded-xl border focus:ring-0 placeholder:text-slate-400 shadow-sm text-slate-600 border-indigo-200 hover:border-indigo-300 ease-in transition duration-300 focus:outline-none focus:border-indigo-400 focus:shadow"
            placeholder="{{ 'common.search_by_name_address'|trans }}"
            {{ stimulus_target('google-place-widget', 'placeInput') }}>
        </gmp-place-autocomplete>
        <div {{ stimulus_target('google-place-widget', 'placeInfo') }} class="-mt-3 {{ not place ? 'hidden' }}">
            <img {{ stimulus_target('google-place-widget', 'photoDisplay') }} class="w-full h-44 rounded-xl shrink-0 object-cover mb-4" src="{{ item.place.photoUri ?? ('https://placehold.co/300?text=' ~ item.name) }}" alt="{{ item.name }}-photo" />
            <div class="font-medium text-base/5 md:text-lg/5 line-clamp-2" {{ stimulus_target('google-place-widget', 'nameDisplay') }}>{{ place ? place.name }}</div>
            <p {{ stimulus_target('google-place-widget', 'typeDisplay') }} class="text-xs/snug text-indigo-500 {{ place ? 'hidden' }}">{{ place ? place.type }}</p>
            <a {{ stimulus_target('google-place-widget', 'addressDisplay addressLinkDisplay') }}
                href="{{ place ? place.googleMapsURI }}"
                target="_blank"
                class="text-xs/snug md:text-sm/snug text-gray-500 hover:text-blue-400 mt-1 line-clamp-2">{{ place ? place.address }}</a>
            <hr class="my-3 border-gray-200" />
        </div>


        {{ form_start(form) }}
        <div class="space-y-2">
            {{ form_row(form.notes) }}
            <div class="grid grid-cols-2 gap-2 mb-3">
                <div class="col-span-1">
                    {{ form_row(form.startTime) }}
                </div>
                <div class="col-span-1">
                    {{ form_row(form.endTime) }}
                </div>
            </div>
            {% if form.status is defined %}
                {{ form_row(form.status) }}
            {% endif %}
        </div>

        <div class="mt-8">
            <button type="submit"
                {{ not place ? 'disabled' }}
                {{ stimulus_target('google-place-widget', 'submitButton') }}
                    class="px-2 block w-full py-2 bg-indigo-600 text-white transition-colors font-medium cursor-pointer not-disabled:hover:bg-indigo-400 disabled:opacity-50 disabled:cursor-not-allowed not-disabled:cursor-pointer rounded-xl">
                {{ place ? 'common.modify'|trans : 'common.add'|trans }}
            </button>
        </div>

        {{ form_end(form) }}
        {% if item.id %}
            <hr class="my-4 border-gray-200">
            <form action="{{ path('app_travelitem_delete', {'trip': trip.id}) }}" method="post" class="" onsubmit="return confirm('Supprimer ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete-item' ~ trip.id) }}">
                <input type="hidden" name="item" value="{{ item.id }}">
                <button type="submit" class="cursor-pointer w-full p-2 rounded-xl hover:bg-red-50 font-medium text-red-300 text-center text-sm transition-colors">
                    {{ 'common.delete'|trans }}
                </button>
            </form>
        {% endif %}
    </div>
</twig:Modal>
