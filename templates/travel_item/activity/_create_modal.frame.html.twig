<twig:Modal>
    {% block title %}<span class="font-medium text-gray-700">Ajouter une activit√©</span>{% endblock %}
    <div {{ stimulus_controller('google-place-widget', {primaryTypes: ['food', 'tourist_attraction', 'point_of_interest', 'store', 'cafe']}) }}>
        <div class="bg-indigo-50 rounded-2xl">
            <div class="p-2 pb-0">
                <gmp-place-autocomplete
                    id="place-autocomplete"
                    class="bg-white rounded-xl focus:outline-none focus:ring-0 focus:border-none"
                    placeholder="Enter a location"
                    {{ stimulus_target('google-place-widget', 'placeInput') }}>
                </gmp-place-autocomplete>
            </div>


            <div class="p-3 mb-4">
                <div {{ stimulus_target('google-place-widget', 'placeHolder') }} class="">
                    <div class="flex flex-col justify-center items-center">
                        <img src="{{ asset('images/icons/search-place-icon.png') }}" alt="map-marker" class="size-8" />
                        <div class="text-sm" style="color: #6a6ba5">
                            Choisissez un lieu
                        </div>
                    </div>
                </div>

                <div {{ stimulus_target('google-place-widget', 'placeInfo') }} class="hidden">
                    <div class="flex space-x-3">

                        <div class="w-full flex flex-col justify-between">
                            <div>
                                <p {{ stimulus_target('google-place-widget', 'typeDisplay')}} class="text-sm text-purple-900 font-medium mb-1.5"></p>
                                <div class="font-medium text-base/5 line-clamp-2" {{ stimulus_target('google-place-widget', 'nameDisplay') }}></div>
                                <div {{ stimulus_target('google-place-widget', 'addressDisplay') }} class="text-sm/snug text-gray-500 line-clamp-2"></div>
                            </div>

                            <div class="flex mt-3">
                                <a {{ stimulus_target('google-place-widget', 'addressLinkDisplay') }} href="" target="_blank" rel="noopener noreferrer" class="px-2 pt-0.5 pb-1 inline-flex items-center gap-1 font-normal text-sm bg-gray-200 text-gray-800 rounded-xl hover:bg-gray-300">
                                    Maps
                                    <twig:ux:icon name="bx:link-external" class="size-4" />
                                </a>
                            </div>
                        </div>
                        <img class="size-24 rounded-2xl shrink-0 object-cover"
                             src=""
                            {{ stimulus_target('google-place-widget', 'photoDisplay') }}
                             alt="place-photo" />
                    </div>
                </div>
            </div>
        </div>


        {{ form_start(form) }}
        <div class="space-y-2">
            <div class="w-full mt-8">
                {{ form_widget(form.notes) }}
            </div>

            <div class="flex justify-end mt-6">

                <label>
                    <select name="{{ field_name(form.status) }}"
                            class="bg-blue-100 rounded-l-2xl pl-2 py-1 custom-select focus:outline-none">
                        {% for label, value in field_choices(form.status) %}
                            <option
                                value="{{ value }}" {{ form.status.vars.value == value ? 'selected' }}>{{ label }}</option>
                        {% endfor %}
                    </select>
                </label>
                <div>
                    <button type="submit"
                            disabled
                            {{ stimulus_target('google-place-widget', 'submitButton') }}
                            class="bg-blue-100 px-4 py-1 disabled:opacity-50 disabled:cursor-not-allowed not-disabled:hover:bg-blue-200 not-disabled:cursor-pointer rounded-r-2xl ml-0.5">
                        Ajouter
                    </button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</twig:Modal>
