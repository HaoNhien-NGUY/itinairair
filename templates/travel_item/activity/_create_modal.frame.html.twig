<twig:Modal>
    {% block title %}<span class="font-medium text-gray-700">Lieu</span>{% endblock %}

    {% set googlePlaceOptions = {primaryTypes: ['food', 'tourist_attraction', 'point_of_interest', 'store', 'cafe']} %}
    {% if destination|default %}
        {% set googlePlaceOptions = googlePlaceOptions|merge({'location': destination.place.location}) %}
    {% endif %}

    {% set place = item.place ?? null %}

    <div {{ stimulus_controller('google-place-widget', googlePlaceOptions) }}>
        <div {{ stimulus_controller('hide-toggle') }}>
            <div class="bg-indigo-50 border-2 border-indigo-100 rounded-2xl">
                <div {{ stimulus_target('hide-toggle', 'item') }} class="{{ place ? 'hidden' }} p-2 pb-0">
                    <gmp-place-autocomplete
                        id="place-autocomplete"
                        class="bg-white rounded-xl focus:outline-none focus:ring-0 focus:border-none"
                        placeholder="Enter a location"
                        {{ stimulus_target('google-place-widget', 'placeInput') }}>
                    </gmp-place-autocomplete>
                </div>


                <div class="p-3">
                    <div {{ stimulus_target('google-place-widget', 'placeHolder') }} class="{{ place ? 'hidden' }}">
                        <div class="flex flex-col justify-center items-center">
                            <img src="{{ asset('images/icons/search-place-icon.png') }}" alt="map-marker"
                                 class="size-8"/>
                            <div class="text-sm" style="color: #6a6ba5">
                                Choisissez un lieu
                            </div>
                        </div>
                    </div>

                    <div {{ stimulus_target('google-place-widget', 'placeInfo') }} class="{{ not place ? 'hidden' }}">
                        <div class="flex space-x-3">

                            <div class="w-full flex flex-col justify-between">
                                <div>
                                    <div class="font-medium text-base/5 line-clamp-2" {{ stimulus_target('google-place-widget', 'nameDisplay') }}>{{ place ? place.name }}</div>
                                    <p {{ stimulus_target('google-place-widget', 'typeDisplay') }}
                                        class="text-xs/snug text-gray-500">{{ place ? place.type }}</p>
                                    <div {{ stimulus_target('google-place-widget', 'addressDisplay') }}
                                        class="text-sm/snug text-gray-500 line-clamp-2">{{ place ? place.address }}</div>
                                </div>

                                <div class="mt-3 flex justify-end space-x-2">
                                    {% if place %}
                                        <button {{ stimulus_action('hide-toggle', 'toggle') }} type="button" class="text-indigo-500 hover:bg-indigo-200 px-2 font-medium rounded-xl text-sm cursor-pointer">
                                            Modifier
                                        </button>
                                    {% endif %}
                                    <a {{ stimulus_target('google-place-widget', 'addressLinkDisplay') }}
                                        href="{{ place ? place.googleMapsURI }}"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="py-0.5 px-2.5 z-30 text-white font-medium text-sm bg-indigo-500 flex items-center focus:outline-none hover:bg-indigo-400 transition-colors rounded-xl">
                                        Maps
                                        <twig:ux:icon name="bxs:map" class="size-4 ml-1"/>
                                    </a>
                                </div>
                            </div>
{#                            <img class="size-24 rounded-2xl shrink-0 object-cover"#}
{#                                 src="{{ place ? place.photoUri }}"#}
{#                                {{ stimulus_target('google-place-widget', 'photoDisplay') }}#}
{#                                 alt="place-photo"/>#}
                        </div>
                    </div>
                </div>
            </div>
        </div>


        {{ form_start(form) }}
        <div class="space-y-2">
            <div class="w-full mt-8">
                {{ form_widget(form.notes) }}
            </div>

            <div class="flex justify-end mt-6">

                {#  idea creation, so status is set to idea #}
                {% if form.status|default(false) %}
                    <label>
                        <select name="{{ field_name(form.status) }}"
                                class="bg-blue-100 rounded-l-xl pl-2 py-1 custom-select focus:outline-none">
                            {% for label, value in field_choices(form.status) %}
                                <option
                                    value="{{ value }}" {{ form.status.vars.value == value ? 'selected' }}>{{ label }}</option>
                            {% endfor %}
                        </select>
                    </label>
                {% endif %}
                <div>
                    <button type="submit"
                        {{ not item ? 'disabled' }}
                            {{ stimulus_target('google-place-widget', 'submitButton') }}
                            class="bg-blue-100 px-4 py-1 disabled:opacity-50 disabled:cursor-not-allowed not-disabled:hover:bg-blue-200 not-disabled:cursor-pointer rounded-r-xl ml-0.5">
                        {{ place ? 'Modifier' : 'Ajouter' }}
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</twig:Modal>
