{% extends 'travel_item/activity/_base_show.frame.html.twig' %}

{% block card_css %}outline-2{% endblock %}

{% block open_details %}
    <a href="{{ path('app_travelitem_activity_show', {'trip': trip.id, 'item': item.id }) }}"
       class="p-0.5 text-gray-900 bg-indigo-100 flex items-center justify-items-center absolute top-1.5 right-1.5 hover:bg-indigo-200 transition-colors font-medium rounded-full">
        <twig:ux:icon name="material-symbols:close" class="size-3.5 text-gray-500" />
    </a>
{% endblock %}
{% block details %}

    {% if item.place.address %}
        <div class="-mt-1">
            <a href="{{ item.place.googleMapsURI }}" target="_blank" rel="noopener noreferrer" class="text-sm/snug text-gray-500">{{ item.place.address }}</a>
        </div>
    {% endif %}


    <div class="mt-4 space-y-2">
        <div class="flex w-full">
            <div class="min-w-6 mr-1">
                <twig:ux:icon name="wpf:note" class="size-4 text-yellow-500"/>
            </div>
            <div class="w-full">
                <twig:TravelItemNoteInlineEdit item="{{ item }}"/>
            </div>
        </div>
    </div>

    <div class="mt-4 flex justify-between">

        <div class="flex space-x-4 items-center text-sm">
            <div class="flex items-center">
                <div class="min-w-5 mr-1">
                    <twig:ux:icon name="iconoir:clock" class="size-4.5 text-gray-700" />
                </div>
                {% if item.startTime %}
                    {{ item.startTime }}
                {% else %}
                    <span class="text-sm text-gray-500">Ajouter une heure</span>
                {% endif %}
            </div>
            <div class="flex items-center">
                <div class="min-w-5 mr-1">
                    <twig:ux:icon name="iconoir:dollar" class="size-4.5 text-gray-700" />
                </div>
                {% if item.startTime %}
                    {{ item.startTime }}
                {% else %}
                    <span class="text-sm text-gray-500">Ajouter un co√ªt</span>
                {% endif %}
            </div>
        </div>
        <div class="flex items-center justify-end">
            <a href="{{ item.place.googleMapsURI }}"
               target="_blank"
               rel="noopener noreferrer"
               class="py-1 px-3 text-indigo-400 text-sm bg-indigo-50 flex items-center focus:outline-none hover:bg-indigo-100 transition-colors rounded-xl">
                Maps
                <twig:ux:icon name="bxs:map" class="size-4 ml-1" />
            </a>


        </div>
    </div>

    <form action="{{ path('app_travelitem_delete', {'trip': trip.id}) }}" method="post" data-turbo-frame="_top" onsubmit="return confirm('Supprimer ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete-item' ~ trip.id) }}">
        <input type="hidden" name="item" value="{{ item.id }}">
        <button type="submit" class="cursor-pointer text-gray-500 text-sm  hover:bg-gray-100  absolute bottom-0 -right-10 flex items-center rounded-xl p-1 transition-colors">
            <twig:ux:icon name="flowbite:trash-bin-solid" class="size-5 text-gray-400" />
        </button>
    </form>
{% endblock %}
