<div class="relative group/item md:ml-0 ml-2 {{ newItem is same as(item) ? 'new-item' }}">
    <div class="flex md:space-x-3">
        {% include 'travel_item/activity/_base_show.frame.html.twig' with {trip, item, } %}
        <img class="md:w-40 md:h-24 size-22 rounded-xl hidden md:block [.idea-container_&]:hidden shrink-0 object-cover" src="{{ item.place.photoUri ?? ('https://placehold.co/300?text=' ~ item.name) }}" alt="{{ item.name }}-photo" />
    </div>

    <div class="absolute handle z-30 cursor-grabbing -ml-6 pl-6 -mr-3 pr-3 top-3 -start-3.5">
        <div class="inline-flex relative items-center justify-center w-7 h-7">
            <div class="absolute w-full h-full bg-indigo-300 border-2 border-white rounded-full rounded-br-none transform rotate-45"></div>

            <span class="relative text-white font-bold transform ">{{ position }}</span>
        </div>
        <div class="mt-2.5 opacity-100 group-hover/item:[&:not(.sortable-ghost_&)]:opacity-100 transition-opacity bg-white rounded-md flex justify-center">
            <twig:ux:icon name="ic:baseline-drag-indicator" class="size-5.5 md:size-7 text-indigo-300/70" />
        </div>
    </div>
</div>
