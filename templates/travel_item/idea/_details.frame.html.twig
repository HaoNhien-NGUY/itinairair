{% extends 'travel_item/idea/_base_show.frame.html.twig' %}

{% block card_css %}outline-2{% endblock %}

{% block open_details %}
    <a href="{{ path('app_travelitem_idea_show', {'trip': trip.id, 'item': item.id }) }}"
       class="p-0.5 text-gray-900 bg-indigo-100 flex items-center justify-items-center absolute top-1.5 right-1.5 hover:bg-indigo-200 transition-colors font-medium rounded-full">
        <twig:ux:icon name="material-symbols:close" class="size-3.5 text-gray-500" />
    </a>
{% endblock %}

{% block details %}
    <div class="my-1">
{#        <twig:TravelItemNoteInlineEdit item="{{ item }}"/>#}

        <div class="flex w-full">
            <div class="min-w-4 mr-1">
                <twig:ux:icon name="wpf:note" class="size-3.5 mt-1 text-yellow-500"/>
            </div>
            <div class="w-full">
                <twig:TravelItemNoteInlineEdit item="{{ item }}"/>
            </div>
        </div>
    </div>

    {% if item.place.address %}
        <div class="mt-2">
            <span class="text-sm text-gray-600">
                <twig:ux:icon name="ooui:map-pin" class="size-4 shrink-0 inline text-indigo-400 mr-0.5" />
                {{ item.place.address }}
            </span>
        </div>
    {% endif %}


    <div class="flex justify-end text-xs space-x-2 mt-1.5">
        <form action="{{ path('app_travelitem_delete', {'trip': trip.id}) }}" method="post" data-turbo-frame="_top" class="flex items-center">
            <input type="hidden" name="_token" value="{{ csrf_token('delete-item' ~ trip.id) }}">
            <input type="hidden" name="item" value="{{ item.id }}">
            <button type="submit" class="cursor-pointer p-1.5 rounded-full hover:bg-gray-100 transition-colors">
                <twig:ux:icon name="flowbite:trash-bin-solid" class="size-3.5 text-gray-400" />
            </button>
        </form>
        {% if item.place %}

            <a href="{{ item.place.googleMapsURI }}"
               target="_blank"
               rel="noopener noreferrer"
               class="py-1 px-3 text-indigo-400 text-sm bg-indigo-50 flex items-center focus:outline-none hover:bg-indigo-100 transition-colors rounded-xl">
                Maps
                <twig:ux:icon name="bxs:map" class="size-4 ml-1" />
            </a>
        {% endif %}
    </div>
{% endblock %}
