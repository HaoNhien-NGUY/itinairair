{% extends 'base_with_navbar.html.twig' %}

{% block title %}Hello TripController!{% endblock %}
{% block body_style %}min-h-screen flex flex-col{% endblock %}

{% block body %}
    <div class="container max-w-2xl mx-auto mt-10 space-y-6">
        <div class="rounded-3xlbordershadowborder-indigo-200p-6">
            <div class="flex flex-col items-center">
                <img src="https://placehold.co/800?text={{ app.user.email[:1] }}&font=roboto" alt="airplane" class="rounded-full size-14 mr-4" />
                <div class="text-center text-lg mt-2">
                    {{ app.user.email }}
                </div>
            </div>

            <div class="mt-10">
                <div class="grid grid-cols-3 gap-4">
                    <div class="rounded-xl bg-indigo-50 flex items-center p-2 col-span-1">
                        <twig:ux:icon name="iconoir:map" class="size-6 text-indigo-400 mr-3"/>
                        <div class="font-medium">
                            <span class="">{{ memberships|length }}</span>
                            <span class="block -mt-1 text-sm text-gray-500">voyages</span>
                        </div>
                    </div>
                    <div class="rounded-xl bg-indigo-50 flex items-center p-2 col-span-1">
                        <twig:ux:icon name="bi:passport" class="size-6 text-indigo-400 mr-3"/>
                        <div class="font-medium">
                            <span class="">{{ statistics.countries|length }}</span>
                            <span class="block -mt-1 text-sm text-gray-500">pays</span>
                        </div>
                    </div>
                    <div class="rounded-xl bg-indigo-50 flex items-center p-2 col-span-1">
                        <twig:ux:icon name="iconoir:city" class="size-6 text-indigo-400 mr-3"/>
                        <div class="font-medium">
                            <span class="">{{ statistics.cities|length }}</span>
                            <span class="block -mt-1 text-sm text-gray-500">villes</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="border-t-2 py-8 mt-4 border-indigo-50 bg-indigo-10 grow">
        {% set today = date('today') %}

        <div class="container max-w-2xl mx-auto">
            <div class="mb-6 flex justify-start">
                <a href="{{ path('app_trip_create') }}"
                   data-turbo-frame="modal"
                   class="bg-indigo-500 hover:bg-indigo-400 transition-colors text-white text-sm font-medium py-1.5 px-4 flex items-center rounded-xl">
                    <twig:ux:icon name="bx:plus" class="size-4 mr-2 text-white"/>
                    {{ 'trip.create'|trans }}
                </a>
            </div>
            <div class="space-y-6">
                {% if trips.ongoing %}
                    <div class="mt-6">
                        <div class="space-y-6">
                        {% for trip in trips.ongoing %}
                            <a href="{{ path('app_trip_show', {id: trip.id}) }}"
                               class="bg-white shadow hover:bg-gray-50 hover:shadow-lg transition duration-300 rounded-2xl overflow-hidden border border-indigo-200 block">
                                <div class="text-white text-sm bg-linear-to-r flex items-center from-indigo-400 to-indigo-200 font-medium px-4 py-1">
                                    {{ 'trip.status.ongoing'|trans }}
                                    <span class="font-normal ml-4">{{ 'trip.x_remaining_days'|trans({days: trip.endDate.diff(today).days}) }}</span>
                                </div>
                                <div class="p-4">
                                    <div class="text-lg">{{ trip.name }}</div>
                                    <div class="flex items-center">
                                        <span class="text-gray-500 text-sm">{{ trip.startDate|date_xs }} {{ trip.startDate|date('Y')}} - {{ trip.endDate|date_xs }}
                                            <span class="mx-1">•</span> {{ 'common.x_days'|trans({days: trip.durationInDays}) }}
                                        </span>
                                        <div class="flex flex-wrap items-center ml-4 text-sm text-gray-500">
                                            <twig:ux:icon name="bxs:map" class="size-4.5 mr-1" />
                                            {% for country in countriesByTrip[trip.id]|default([]) %}
                                                {% if not loop.first %}<span class="inline-block mr-1">,</span>{% endif %}
                                                <span class="">{{ country }}</span>
                                            {% else %}
                                                <span class="italic">{{ 'trip.no_destination'|trans }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="flex space-x-1 mt-3">
                                        {% for membership in trip.tripMemberships %}
                                            <div class="flex items-center">
                                                <img
                                                    src="https://placehold.co/800?text={{ membership.member.email[:1] }}&font=roboto"
                                                    class="rounded-full size-8" alt="{{ membership.member.email }}">
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                        </div>
                    </div>
                {% endif %}

                {% if trips.coming %}
                    <div class="space-y-4">
                        {% for trip in trips.coming %}
                            <a href="{{ path('app_trip_show', {id: trip.id}) }}"
                               class="bg-white shadow hover:bg-gray-50 hover:shadow-lg transition duration-300 rounded-2xl overflow-hidden border border-indigo-200 block">
                                <div class="text-white text-sm bg-linear-to-r flex items-center from-gray-500 to-gray-200 font-medium px-4 py-1">
                                    {{ 'trip.status.coming'|trans }}
                                    <span class="font-normal ml-4">{{ 'trip.coming_x_days'|trans({days: trip.endDate.diff(today).days}) }}</span>
                                </div>
                                <div class="p-4">
                                    <div class="text-lg">{{ trip.name }}</div>
                                    <div class="flex items-center">
                                        <span
                                            class="text-gray-500 text-sm">{{ trip.startDate|date_xs }} {{ trip.startDate|date('Y') }} - {{ trip.endDate|date_xs }}
                                        <span class="mx-2">•</span> {{ 'common.x_days'|trans({days: trip.durationInDays}) }}</span>

                                        <div class="flex flex-wrap items-center ml-4 text-sm text-gray-500">
                                            <twig:ux:icon name="bxs:map" class="size-4.5 mr-1" />
                                            {% for country in countriesByTrip[trip.id]|default([]) %}
                                                {% if not loop.first %}<span class="inline-block mr-1">,</span>{% endif %}
                                                <span class="">{{ country }}</span>
                                            {% else %}
                                                <span class="italic">{{ 'trip.no_destination'|trans }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="flex space-x-1 mt-3">
                                        {% for membership in trip.tripMemberships %}
                                            <div class="flex items-center">
                                                <img
                                                    src="https://placehold.co/800?text={{ membership.member.email[:1] }}&font=roboto"
                                                    class="rounded-full size-8" alt="{{ membership.member.email }}">
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            {% if trips.past %}
                <div class="mt-12">
                    <h3 class="mb-2 text-gray-600 font-mediumy">{{ 'trip.status.past'|trans }}</h3>
                    <div class="space-y-4">
                        {% for trip in trips.past %}
                            <a href="{{ path('app_trip_show', {id: trip.id}) }}"
                               class="bg-white shadow hover:bg-gray-50 hover:shadow-lg transition duration-300 rounded-2xl overflow-hidden border border-indigo-200 block p-4">
                                <div class="text-lg">{{ trip.name }}</div>
                                <div class="flex items-center">
                                        <span
                                            class="text-gray-500 text-sm">{{ trip.startDate|date_xs }} {{ trip.startDate|date('Y') }} - {{ trip.endDate|date_xs }}
                                        <span class="mx-2">•</span> {{ 'common.x_days'|trans({days: trip.durationInDays}) }}</span>

                                    <div class="flex flex-wrap items-center ml-4 text-sm text-gray-500">
                                        <twig:ux:icon name="bxs:map" class="size-4.5 mr-1" />
                                        {% for country in countriesByTrip[trip.id]|default([]) %}
                                            {% if not loop.first %}<span class="inline-block mr-1">,</span>{% endif %}
                                            <span class="">{{ country }}</span>
                                        {% else %}
                                            <span class="italic">{{ 'trip.no_destination'|trans }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="flex space-x-1 mt-3">
                                    {% for membership in trip.tripMemberships %}
                                        <div class="flex items-center">
                                            <img
                                                src="https://placehold.co/800?text={{ membership.member.email[:1] }}&font=roboto"
                                                class="rounded-full size-8" alt="{{ membership.member.email }}">
                                        </div>
                                    {% endfor %}
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}



        </div>
    </div>
{% endblock %}
