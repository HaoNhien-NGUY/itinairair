{% extends 'base_with_navbar.html.twig' %}

{% block title %}{{ 'trip.my_trips'|trans }}{% endblock %}
{% block body_style %}min-h-screen flex flex-col{% endblock %}

{% macro trip_card(trip, today, countriesByTrip, status = null) %}
    {% set class = {
        ongoing: 'from-indigo-400to-indigo-200 bg-indigo-500',
        coming: 'from-gray-500to-gray-200 bg-gray-400',
    } %}
    <a href="{{ path('app_trip_show', {id: trip.id}) }}"
       class="bg-white border border-gray-200 hover:shadow-lg transition duration-200 rounded-2xl overflow-hidden block">
        {% if status %}
            <div class="text-white text-sm bg-linear-to-r flex items-center {{ class[status]|default }} font-medium px-4 py-1">
                {{ ('trip.status.' ~ status)|trans }}
                <span class="font-normal ml-4">{{ ('trip.status.days_message.' ~ status)|trans({days: trip.endDate.diff(today).days})|lower }}</span>
            </div>
        {% endif %}
        <div class="p-4">
            <div class="text-lg">{{ trip.name }}</div>
            <div class="flex items-center">
                <span class="text-gray-500 text-sm">{{ trip.startDate|date_xs }} {{ trip.startDate|date('Y')}} - {{ trip.endDate|date_xs }}
                    <span class="mx-1">â€¢</span> {{ 'common.x_days'|trans({days: trip.durationInDays}) }}
                </span>
                <div class="flex flex-wrap items-center ml-6 text-sm text-gray-500">
                    <twig:ux:icon name="bxs:map" class="size-4.5 mr-1" />
                    {% for country in countriesByTrip[trip.id]|default([]) %}
                        {% if not loop.first %}<span class="inline-block mr-1">,</span>{% endif %}
                        <span class="">{{ country }}</span>
                    {% else %}
                        <span class="">-</span>
                    {% endfor %}
                </div>
            </div>
            <div class="flex space-x-1 mt-3">
                {% for membership in trip.tripMemberships %}
                    <div class="flex items-center">
                        <img
                            src="{{ membership.member.displayAvatar }}"
                            class="rounded-full size-8" alt="{{ membership.member.email }}">
                    </div>
                {% endfor %}
            </div>
        </div>
    </a>
{% endmacro %}

{% block body %}
    <div class="container max-w-3xl mx-auto mt-10 space-y-6">
        <div class="">
            <div class="flex flex-col items-center">
                <twig:UserAvatar user="{{ app.user }}" imgClass="size-32"/>

{#                <img src="{{ app.user.displayAvatar }}" alt="airplane" class="rounded-full size-24" />#}
                <div class="text-center text-lg font-medium mt-2">
                    {{ app.user.username }}
                </div>
            </div>

            <div class="mt-10">
                <div class="grid grid-cols-3 gap-4">
                    <div class="rounded-xl bg-indigo-50 border-2 border-indigo-100 flex items-center p-2 col-span-1">
                        <twig:ux:icon name="iconoir:map" class="size-6 text-indigo-400 mr-3"/>
                        <div class="font-medium">
                            <span class="">{{ memberships|length }}</span>
                            <span class="block -mt-1 text-sm text-gray-500">{{ 'common.trips'|trans({count:memberships|length})|lower }}</span>
                        </div>
                    </div>
                    <div class="rounded-xl bg-indigo-50 border-2 border-indigo-100 flex items-center p-2 col-span-1">
                        <twig:ux:icon name="bi:passport" class="size-6 text-indigo-400 mr-3"/>
                        <div class="font-medium">
                            <span class="">{{ statistics.countries|length }}</span>
                            <span class="block -mt-1 text-sm text-gray-500">{{ 'common.countries'|trans({count: statistics.countries|length})|lower }}</span>
                        </div>
                    </div>
                    <div class="rounded-xl bg-indigo-50 border-2 border-indigo-100 flex items-center p-2 col-span-1">
                        <twig:ux:icon name="iconoir:city" class="size-6 text-indigo-400 mr-3"/>
                        <div class="font-medium">
                            <span class="">{{ statistics.cities|length }}</span>
                            <span class="block -mt-1 text-sm text-gray-500">{{ 'common.cities'|trans({count: statistics.cities|length})|lower }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="border-t-2 py-8 mt-4 border-indigo-50 bg-indigo-10 grow">
        {% set today = date('today') %}

        <div class="container max-w-3xl mx-auto">
            <div class="mb-8 flex justify-between items-end">
                <h2 class="text-3xl font-medium text-gray-600">{{ 'trip.my_trips'|trans }}</h2>
                <a href="{{ path('app_trip_create') }}"
                   data-turbo-frame="modal"
                   class="bg-indigo-500 hover:bg-indigo-400 transition-colors text-white text-sm font-medium py-1 px-4 flex items-center rounded-lg">
                    <twig:ux:icon name="bx:plus" class="size-4 mr-2 text-white"/>
                    {{ 'trip.new_trip'|trans }}
                </a>
            </div>

            <div class="space-y-6">
                {% if trips.ongoing %}
                    <div class="mt-6">
                        <div class="space-y-6">
                        {% for trip in trips.ongoing %}
                            {{ _self.trip_card(trip, today, countriesByTrip, 'ongoing') }}
                        {% endfor %}
                        </div>
                    </div>
                {% endif %}

                {% if trips.coming %}
                    <div class="space-y-6">
                        {% for trip in trips.coming %}
                            {{ _self.trip_card(trip, today, countriesByTrip, 'coming') }}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            {% if trips.past %}
                <hr class="border-gray-200 my-8" />
                <div class="space-y-6">
                    {% for trip in trips.past %}
                        {{ _self.trip_card(trip, today, countriesByTrip) }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
