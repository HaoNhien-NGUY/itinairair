{% extends 'trip/show.html.twig' %}

{% block activeTab %}itinerary{% endblock %}

{% block content %}
    {% set destinationEnum = enum("App\\Enum\\TravelItemType").DESTINATION.value %}

    <div class="container mx-auto max-w-2xl py-12">
        <div>
            Debut du voyage
            <div>
                {{ trip.startDate|date_short|capitalize }} ({{ trip.endDate.diff(trip.startDate).days }} jours)
            </div>
        </div>
        {% for destination in destinations %}
            <div class="bg-white border-2 border-indigo-100 flex justify-between rounded-2xl p-4 mb-4">
                <a href="{{ path('app_travelitem_edit', {trip: trip.id, item: destination.id }) }}"
                   class="hover:underline"
                   data-turbo-frame="modal">
                    <div>
                        <span class="text-indigo-600 font-medium">{{ destination.place.city }}</span><span class="text-sm text-gray-500">, {{ destination.place.country }}</span>
                    </div>
                    <div class="text-sm text-gray-600">
                        {{ destination.startDay.date|date_short }}
                        {{ destination.endDay.date|date_short }}
                    </div>
                </a>
                <div>
                    ({{ destination.endDay.date.diff(destination.startDay.date).days }} jours)
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
