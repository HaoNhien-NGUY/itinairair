{% block body %}
    {% set startDate = trip.startDate %}
    {% set statusPlanned = enum('App\\Enum\\ItemStatus').PLANNED.value %}

    <div class="container max-w-6xl py-12 mx-auto px-2">

        <main class="grid bg-gray-1z00 rounded-4xl grid-cols-1 gap-4 lg:grid-cols-3">

            <div class="lg:col-span-2 flex flex-col">

                <div class="flex flex-col space-y-3">
                    {% for day in trip.days %}
                        {{ include('trip/day.html.twig', {day: day, trip: trip, items: items[day.id] ?? null, startDate: startDate}) }}
                    {% endfor %}
                </div>
            </div>


            <div class="max-lg:hidden">
                <div class="bg-gray-100 rounded-3xl space-y-5">
                    <div class="bg-white rounded-3xl p-4">
                        <h3 class="font-semibold mb-3">{{ trip.name }}</h3>

{#                        <h2>Page du voyage : {{ trip.name }}#}
{#                            <form action="{{ path('app_trip_delete', {'id': trip.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this trip?');">#}
{#                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trip.id) }}">#}
{#                                <button type="submit" class="cursor-crosshair text-red-600 hover:text-red-400 underline transition-colors">Delete</button>#}
{#                            </form></h2>#}
{#                        <p>{{ startDate|date }} - {{ trip.endDate|date }}</p>#}

                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div class="bg-blue-50 p-3 rounded-xl">
                                <div class="text-2xl font-bold text-blue-600">{{ statistics.duration }}</div>
                                <div class="text-xs text-blue-400 font-medium uppercase tracking-wide">Jours</div>
                            </div>
                            <div class="bg-purple-50 p-3 rounded-xl">
                                <div class="text-2xl font-bold text-purple-600">{{ statistics.country_count }}</div>
                                <div class="text-xs text-purple-400 font-medium uppercase tracking-wide">Pays</div>
                            </div>
                            <div class="bg-green-50 p-3 rounded-xl">
                                <div class="text-2xl font-bold text-green-600">{{ statistics.city_count }}</div>
                                <div class="text-xs text-green-400 font-medium uppercase tracking-wide">Villes</div>
                            </div>
                        </div>

                        {% if statistics.countries|length > 0 %}
                            <div class="">
                                <h3 class="text-sm font-semibold text-gray-500 mb-2 uppercase tracking-wide">Pays visités</h3>
                                <div class="flex flex-wrap gap-2">
                                    {% for country in statistics.countries %}
                                        <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm font-medium">{{ country }}</span>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                    </div>


                    <div class="bg-white rounded-2xl p-4">
                        <h3 class="font-semibold mb-3">Hotels et hebergements</h3>
                        <div class="space-y-3">
                            {% for accommodation in accommodations %}
                                <div class="text-sm">
                                    <div class="font-medium">{{ accommodation.name }}</div>
                                    {% if accommodation.address %}
                                        <div class="text-gray-500 text-xs">{{ accommodation.address }}</div>
                                    {% endif %}
                                    <div class="text-gray-400 text-xs mt-1">
                                        {{ accommodation.startDay.date|date_short }}
                                        {% if accommodation.endDay %}
                                            - {{ accommodation.endDay.date|date_short }}
                                        {% endif %}
                                    </div>
                                </div>
                            {% else %}
                                <div class="text-gray-400 text-sm italic">Aucun hébergement</div>
                            {% endfor %}
                        </div>
                    </div>


                    <div class="bg-white rounded-2xl p-4">
                        <h3 class="font-semibold mb-3">Vols</h3>
                        <div class="space-y-3">
                            {% for flight in flights %}
                                <div class="text-sm border-b border-gray-100 pb-2 last:border-0">
                                    <div class="font-medium mb-1">
                                        {% if flight.flightNumber %}
                                            {{ flight.flightNumber }}
                                        {% else %}
                                            Vol
                                        {% endif %}
                                    </div>
                                    <div class="grid grid-cols-2 gap-2 text-xs">
                                        <div>
                                            <div class="text-gray-500">Départ</div>
                                            <div class="font-semibold">{{ flight.departureAirport.code ?? 'N/A' }}</div>
                                            <div>Term: {{ flight.departureAirport.terminal ?? 'TBD' }}</div>
                                            <div>{{ flight.startTime|date('H:i') }}</div>
                                        </div>
                                        <div>
                                            <div class="text-gray-500">Arrivée</div>
                                            <div class="font-semibold">{{ flight.arrivalAirport.code ?? 'N/A' }}</div>
                                            <div>Term: {{ flight.arrivalAirport.terminal ?? 'TBD' }}</div>
                                            <div>{{ flight.endTime|date('H:i') }}</div>
                                        </div>
                                    </div>
                                    <div class="text-gray-400 text-xs mt-1">
                                        {{ flight.startDay.date|date('d M') }}
                                    </div>
                                </div>
                            {% else %}
                                <div class="text-gray-400 text-sm italic">Aucun vol</div>
                            {% endfor %}
                        </div>

                        <div class="mt-3 flex space-x-3 pt-3 border-t border-gray-100">
                            <a href="{{ path('app_travelitem_create', {trip: trip.id, type: enum("App\\Enum\\TravelItemType").FLIGHT.value}) }}"
                               class="px-5 py-3 rounded-lg text-sm bg-gray-50 hover:bg-gray-100 transition-colors"
                               data-turbo-frame="modal"
                            >
                                <twig:ux:icon name="iconoir:airplane" class="size-6" />
                                <div class="mt-1 font-light">Vol</div>
                            </a>
                            <a href="#" class="px-5 py-3 rounded-lg text-sm bg-gray-50 hover:bg-gray-100 transition-colors">
                                <twig:ux:icon name="iconoir:train" class="size-6" />
                                <div class="mt-1 font-light">Train</div>
                            </a>
                            <a href="#" class="px-5 py-3 rounded-lg text-sm bg-gray-50 hover:bg-gray-100 transition-colors">
                                <twig:ux:icon name="iconoir:bus" class="size-6" />
                                <div class="mt-1 font-light">Bus</div>
                            </a>
                        </div>
                    </div>


                    <div class="bg-white rounded-2xl p-4">
                        les voyageurs, un tricount ?
                    </div>
                </div>


            </div>
        </main>

    </div>
{% endblock %}
